{% block field_row %}
{% spaceless %}
	<div class="buscadorCampo">
		<div class="buscadorCampoLabel">{{ form_label(form) }}</div>
		<div class="buscadorCampoForm">{{ form_widget(form) }}</div>
	</div>
{% endspaceless %}
{% endblock field_row %}

{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('field_widget') }}
    {% else %}
        <div class="date">
            {{ date_pattern|replace({
            	'{{ day }}':   form_widget(form.day),
                '{{ month }}': form_widget(form.month),
                '{{ year }}':  form_widget(form.year),
            })|raw }}
        </div>
      
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}