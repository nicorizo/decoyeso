{% endblock javascripts %}

{% block main_content %}



<div class="module width_full">

	<div class="module_header">
	
		<div class="module_tit txt3">{% block module_tit %}TITLE LIST{% endblock module_tit %}</div>
		<a id="clienteListarBtn" class="btn_blue right" href="{% block list_path %}{{ path('admin_entity_list') }}{% endblock list_path %}">Ir al listado</a>
		
	</div>
	
	<div class="module_content">
		{%block msj_info%}
		
			{% if app.session.hasFlash('msj_info') %}
				<div id="msjInfo" class="msjInfo" >
					{{ app.session.getFlash('msj_info') }}
				</div>
			{% endif %}
	
		{%endblock msj_info%}
	
		{% block form_content %}
		{% block errorMsj %}{% endblock errorMsj %}
		<form action="{% block create_path %}{{ path('admin_entity_create') }}{% endblock create_path %}" method="post" {{ form_enctype(form) }}>
		{% form_theme form 'CoobixAdminBundle:Form:Fields.html.twig' %}
		{{ form_widget(form) }}
		<p>
			<button class="btn_green_button right" type="submit">Guardar cambios</button>
		</p>
		</form>
		
		
		<div class="fix"></div>
		{% endblock form_content %}
	</div>
</div>


{% block otros %}{% endblock otros %}

{% endblock main_content %}


