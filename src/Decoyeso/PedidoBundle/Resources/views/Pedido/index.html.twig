<h1>Pedido list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Fechacreado</th>
            <th>Fechaactualizado</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pedido_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.descripcion }}</td>
            <td>{{ entity.estado }}</td>
            <td>{% if entity.fechaCreado %}{{ entity.fechaCreado|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.fechaActualizado %}{{ entity.fechaActualizado|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pedido_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pedido_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pedido_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
